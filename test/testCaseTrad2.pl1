#(* comprobacion recursividad *)



programa cuatro:

	subprogramas

	funcion resta(cuenta, num : entero): entero:
		comienzo
			si (cuenta + 1 == num) entonces:
				devolver cuenta;
			sino :
				devolver resta(cuenta+1, num);
			fin si;
		
		fin;
	
	funcion factorial(numero: entero) : entero:
		comienzo
  			si (numero == 0) entonces:
  				devolver 1;
  			sino: 
  				
  				devolver  numero * factorial(resta(0,numero));
  			fin si;
  		fin;
   
  comienzo
  
    escribir("Probando recursividad - El factorial de 7 es:");
    
  escribir (factorial(7)); #(* debe imprimir 120*)
    
  escribir("FIN");
    
  fin.
