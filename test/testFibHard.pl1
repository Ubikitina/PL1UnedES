# Generador de secuencia de Fibonacci: N(0)= N(-1) + N(-2) 
# Autor: Oscar José Pellicer Valero
programa fib:
	# Cantidad de números de Fibonacci a generar
	constantes
		MAX = 18; 
	subprogramas
	# Implementación de la suma
	funcion sum(a, b: entero): entero:
		comienzo
			devolver a+b;
		fin;
	# Método para iniciar el generador
	procedimiento fibonacci(MAX: entero):
		subprogramas
			# Generador de números de Fibonacci recursivo
			procedimiento fibGen(n1, n2, i, MAX: entero):
				variables
					n0: entero;
				comienzo
					n0 = n1 + n2;
					escribir(n0);

					si i < MAX entonces:
						
						fibGen(n0, n1, sum(i,1), MAX);
					sino:
						escribir("Fin");
					fin si;
				fin;
		
		comienzo
			
			fibGen(1, 0, 0, MAX);
		fin;
    
	comienzo
		escribir("Generando N numeros de Fibonacci: ");
		escribir(MAX);
		escribir();
		fibonacci(MAX);
	fin.
